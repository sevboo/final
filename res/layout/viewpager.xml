<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="204dp"
        android:layout_height="102dp"
        android:layout_gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/user_update_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/user_update_button" />

        <ImageButton
            android:id="@+id/card_info_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/card_info_update" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="199dp"
        android:layout_height="102dp"
        android:layout_gravity="center" >

        <ImageButton
            android:id="@+id/notice_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/notice_button" />

        <ImageButton
            android:id="@+id/qna_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/qna_button" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/slide_first" />

</LinearLayout>